{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./app",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["src/types"],
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@resources/*": ["./resources/*"]
    }
  },
  "include": ["src/**/*"]
}
